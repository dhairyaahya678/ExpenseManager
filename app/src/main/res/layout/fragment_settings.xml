<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/fake_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/container1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Settings"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/container1_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Edit Icon"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fake_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/container2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Settings"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/container2_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_preferences"
                android:contentDescription="Privacy Icon"
                android:layout_gravity="center_vertical" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fake_container3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/container3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/container3_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="Notifications Icon"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
